<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/bottel_numbers"
                android:id="@+id/imageView3"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/str_bottles_number_txt"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >


            <TextView
                    android:id="@+id/bottle_number_name"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/header_text_color"
                    android:layout_height="wrap_content"
                    android:text="@string/str_bottles_number_message_txt"
                    android:gravity="start"/>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/header_text_color"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottle_number_value"
                    android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content">


            <ImageView
                    android:textColor="@color/white"
                    android:layout_width="35dp"
                    android:src="@mipmap/plus"
                    android:padding="5dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_graident"
                    android:id="@+id/plus"
            />

            <TextView
                    android:text="1"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/header_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/counter_value"
                    />
            <ImageView
                    android:textColor="@color/white"
                    android:layout_width="35dp"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/minus"
                    android:padding="5dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_graident"
                    android:id="@+id/minus"
            />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/confirm_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/rectangle_graident"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/id_getting_location_view">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/check"/>


            <TextView
                    android:text="@string/str_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/textView4"
            />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>